+		onlyderp := true
+		for addr := range ep.endpointState {
+			if addr.Addr() != tailcfg.DerpMagicIPAddr {
+				onlyderp = false
+				break
+			}
+		}
+		if onlyderp {
+			derpid := int(ep.derpAddr.Port())
+			active, ok := c.activeDerp[derpid]
